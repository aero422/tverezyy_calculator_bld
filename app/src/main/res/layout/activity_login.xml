<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authentication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.tverezyy_calculator.Login">


    <EditText android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/et_email"
        android:layout_marginTop="120dp"
        android:hint="Email"
        android:textColorHint="@color/grey_50"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rounded"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />

    <EditText android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColorHint="@color/grey_50"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rounded"
        android:id="@+id/et_password"
        android:layout_below="@+id/et_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:background="@drawable/round_btm"
            android:text="Авторизація"
            android:textColor="@color/AliceBlue"
            android:textStyle="bold|italic"/>

        <Button
            android:id="@+id/btn_registration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:background="@drawable/round_btm"
            android:text="Реєстрація"
            android:textColor="@color/AliceBlue"
            android:textStyle="bold|italic"/>

    </LinearLayout>
</RelativeLayout>